<% if (typeof errors != "undefined") { %>
    <div class="alert alert-danger" role="alert">
        <% errors.forEach(error => { %>
            <ul>
                <li><%= error.msg %></li>
            </ul>
        <% }) %>
    </div>

<% } %>


<form method="post" action="/contact/update">
    <input type="hidden" name="oldName" value="<%= contact.oldName || contact.nama %>">
    <div class="mb-3">
      <label for="name" class="form-label">Name</label>
      <input type="text" class="form-control" id="name" name="nama" required value="<%= contact.nama %>">
    </div>
    <div class="mb-3">
      <label for="nohp" class="form-label">Number Phone</label>
      <input type="text" class="form-control" id="nohp" name="nohp" required value="<%= contact.nohp %>">
    </div>
    <div class="mb-3">
        <label for="email" class="form-label">Email Address</label>
        <input type="email" class="form-control" id="email" name="email" value="<%= contact.email %>">
    </div>
  

    <button type="submit" class="btn btn-primary">Boom</button>
</form>